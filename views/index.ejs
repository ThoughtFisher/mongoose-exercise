<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%>

    <body>
        <form action="/" method="POST">
            <div class="input-field col s6">
                <button class="waves-effect waves-light btn" type="submit">Send</button>
            </div>
        </form>

        <% if(queryResult.length === 0){ %>
            <section style='
          align-items: center;
          display: flex; 
          flex-direction: column;
          '>
                <h3 style='text-align:center;'>Database is empty</h3>
            </section>
            <% } else { %>
                <h5>Found movies:
                    <%-  queryResult.length   %>
                </h5>
                <table style="width:100%">
                    <tr>
                        <th>rank</th>
                        <th>id</th>
                        <th>title</th>
                        <th>Delete</th>
                    </tr>

                    <% console.log("queryResult length: ", queryResult.length   ) %>
                        <% for (const movie of queryResult) { %>
                            <tr>
                                <td>
                                    <%- movie.rank %>
                                </td>
                                <td>
                                    <%- movie.id %>
                                </td>
                                <td>
                                    <%- movie.title %>
                                </td>
                                <td>
                                    <form action="/" method="POST">
                                        <div class="input-field col s6">
                                            <input type="hidden" name="_method" value="DELETE" />
                                            <input type="hidden" name="id" value="<%- movie._id %>" />
                                            <button class="waves-effect waves-light btn" type="submit">BORRAR</button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                            <% } %>
                </table>
                <% } %>

    </body>

</html>